extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3.teal
                h3 Ficheiros
            .w3-container
                button.w3-btn.w3-black.w3-round-xxlarge
                    a(href='/') Novo ficheiro 
                br
                br
                table.w3-table-all
                    tr
                        th Descrição
                        th Caminho 
                    each fich in lista
                        tr
                            td= fich.descricao
                            td
                                a(href=fich.path)= fich.path
            footer.w3-container.w3.teal
                address Gerado por FormApp

